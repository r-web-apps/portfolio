<% if portfolio %>
  <%= link_to portfolio, class: 'ui raised link card' do %>
    <div class="content">
      <div class="right floated meta">
        <%= portfolio.date %>
      </div>
      <%= image_tag portfolio.icon.url, class: 'ui avatar image' %>
    </div>
    <div class="image">
      <%= image_tag portfolio.picture.url %>
    </div>
    <div class="content no-link">
      <%= portfolio.body.truncate_words(20) %>
    </div>
    <div class="extra content">
    <span class="right floated">
      <i class="heart outline like icon"></i>
      <%= portfolio.likes %> likes
    </span>
      <i class="comment icon"></i>
      <%= portfolio.comments.count %> comments
    </div>
    <div class="extra content">
      <div class="ui large transparent left icon input">
        <i class="heart outline icon"></i>
        <input type="text" placeholder="Add Comment...">
      </div>
    </div>
  <% end %>
<% end %>
