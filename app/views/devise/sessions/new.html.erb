<style>
  body > .grid {
    height: 100%;
  }

  .image {
    margin-top: -100px;
  }

  .column {
    max-width: 450px;
  }
</style>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <img src="<%= asset_path 'R.png' %>" class="image">
      <div class="content">
        Admin login
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'ui large form') do |f| %>
      <div class="ui stacked left aligned segment">
        <div class="field">
          <div class="ui labeled input fluid">
            <div class="ui label">
              <%= f.label :email %>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail address' %>
          </div>
        </div>
        <div class="field">
          <div class="ui labeled input fluid">
            <div class="ui label">
              <%= f.label :password %>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: 'ui fluid large teal submit button primary' %>
        </div>
      </div>
    <% end %>

    <div class="ui message">
      Admin of this page? <%= link_to 'Sign in', new_user_registration_path %>
    </div>
  </div>
</div>
